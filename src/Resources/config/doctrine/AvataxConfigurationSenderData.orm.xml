<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Odiseo\SyliusAvataxPlugin\Entity\AvataxConfigurationSenderData" table="odiseo_avatax_configuration_sender_data">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="provinceCode" type="string" column="province_code" nullable="true"/>
        <field name="countryCode" type="string" column="country_code" nullable="true"/>
        <field name="street" type="string" nullable="true"/>
        <field name="city" type="string" nullable="true"/>
        <field name="postcode" type="string" nullable="true"/>
    </mapped-superclass>
</doctrine-mapping>
